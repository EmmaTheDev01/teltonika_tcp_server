{
  "name": "teltonika-tcp-server",
  "version": "1.0.0",
  "description": "Standalone TCP server for handling Teltonika GPS AVL packets and forwarding to web app",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-connection.js",
    "build": "echo 'No build step required'",
    "postinstall": "echo 'TCP Server dependencies installed'",
    "docker:build": "docker build -t teltonika-tcp-server .",
    "docker:run": "docker run -p 5000:5000 -p 8080:8080 teltonika-tcp-server",
    "docker:compose": "docker-compose up --build",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop teltonika-tcp-server",
    "pm2:restart": "pm2 restart teltonika-tcp-server",
    "pm2:logs": "pm2 logs teltonika-tcp-server",
    "pm2:monit": "pm2 monit"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "teltonika",
    "gps",
    "tcp",
    "avl",
    "tracking",
    "real-time"
  ],
  "author": "Road Freight Management System",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "your-repository-url"
  }
}
